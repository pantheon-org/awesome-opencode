{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opencode.ai/schemas/themes.json",
  "title": "Themes Schema",
  "description": "Schema for themes.json data file",
  "type": "object",
  "properties": {
    "themes": {
      "type": "array",
      "description": "List of all themes",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "keywords", "categories", "status", "metadata"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique theme identifier",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
            "minLength": 1,
            "maxLength": 100
          },
          "name": {
            "type": "string",
            "description": "Human-readable theme name",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "description": "Theme description",
            "minLength": 1,
            "maxLength": 2000
          },
          "keywords": {
            "type": "array",
            "description": "Keywords associated with this theme",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "categories": {
            "type": "array",
            "description": "Category slugs this theme belongs to",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "status": {
            "type": "string",
            "description": "Theme status",
            "enum": ["active", "under_review", "inactive"]
          },
          "metadata": {
            "type": "object",
            "description": "Theme metadata",
            "required": ["auto_discovered", "tool_count", "created_date"],
            "properties": {
              "auto_discovered": {
                "type": "boolean",
                "description": "Whether theme was auto-discovered"
              },
              "tool_count": {
                "type": "integer",
                "description": "Number of tools in this theme",
                "minimum": 0
              },
              "created_date": {
                "type": "string",
                "description": "Date theme was created",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
              },
              "approved_by": {
                "type": "string",
                "description": "Who approved this theme",
                "minLength": 1,
                "maxLength": 100
              },
              "confidence": {
                "type": "number",
                "description": "Confidence score for auto-discovered themes",
                "minimum": 0,
                "maximum": 1
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "suggested_tags": {
      "type": "array",
      "description": "List of suggested tags for themes",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "uniqueItems": true
    },
    "seed_themes": {
      "type": "array",
      "description": "List of seed theme IDs",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      },
      "uniqueItems": true
    }
  },
  "required": ["themes"],
  "additionalProperties": false
}
